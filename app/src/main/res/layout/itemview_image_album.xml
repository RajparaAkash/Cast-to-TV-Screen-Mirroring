<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/_4sdp"
    android:layout_marginTop="@dimen/_4sdp"
    android:layout_marginBottom="@dimen/_7sdp"
    android:orientation="vertical">

    <com.casttotv.screenmirroring.chromecast.smart.tv.View.SquareRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imageAlbumsImg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#F3F3F3"
            android:scaleType="centerCrop"
            app:shapeAppearanceOverlay="@style/RoundedCorner5dp" />

    </com.casttotv.screenmirroring.chromecast.smart.tv.View.SquareRelativeLayout>

    <TextView
        android:id="@+id/albumNameTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_6sdp"
        android:fontFamily="@font/inter_semi_bold"
        android:includeFontPadding="false"
        android:maxLines="1"
        android:text="Folder Name"
        android:textColor="@color/black"
        android:textSize="@dimen/_11ssp" />

    <TextView
        android:id="@+id/imageCountTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_2sdp"
        android:fontFamily="@font/inter_regular"
        android:includeFontPadding="false"
        android:maxLines="1"
        android:text="Image Count"
        android:textColor="#707070"
        android:textSize="@dimen/_9ssp" />

</LinearLayout>
